head
    script(src="./js/bundle.js")

body
    form.log(action='/sign-in' method='post' class='pure-form pure-form-aligned')
        input(type='hidden', name='_csrf', value=_csrf)
        h2 On Draft Brewery Log-in
        h4 #{message}
        input.Email(type='text', placeholder='E-mail')
        br
        input.Password(type='password', placeholder='Password')
        hr
        button.login(type='submit', value='Login' class='pure-button') Log-in
        br
        button.login(class='pure-button') Create Account
        a.frgtpass(href='') Forgot Password?
