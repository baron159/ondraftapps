head
    script(src="./../js/bundle.js")
body
    div(id="layout")
        // Menu toggle
        a#menuLink.menu-link(href='#menu')
            span
        #menu
            .pure-menu
                a.pure-menu-heading(href='/dashboard/main') Dashboard
                ul.pure-menu-list
                    li.pure-menu-item(class="menu-height-override")
                        a.pure-menu-link(href='/dashboard/account-info') Account
                    li.pure-menu-item(class="menu-height-override")
                        a.pure-menu-link(href='#') Brews
                    li.pure-menu-item(class="menu-height-override")
                        a.pure-menu-link(href='#') Payment Info
                    li.pure-menu-item(class="menu-height-override")
                        a.pure-menu-link(href='/log-out') Sign Out
        #main
            h2 My Brewery Information
            h4 #{message}
            form(action='/dashboard/brewery-update' method='POST' class='pure-form')
                input(type='hidden', name='_csrf', value=_csrf)
                input(type='hidden', name='freshUpdate', value=freshFlag)
                input(type='hidden', name='breweryId', value=brewery_id)
                fieldset(class='pure-group')
                    legend Brewery Profile
                    input.pure-input-1-3(type='text' name='breweryName' id='breweryName' placeholder='Brewery Name' value=brewery_name)
                    textarea.pure-input-1-3(id='brewerySum' name='brewerySum' placeholder='Brewery Summary ex- Family owned since 1995') #{brewery_summary}
                    textarea.pure-input-1-3(id='breweryFeatures' name='breweryFeatures' placeholder='Brewery Amenities ex- Dog Friendly, Outside Sitting, Food') #{brewery_amenities}
                    input.pure-input-1-3(type='text' id='breweryAddress1' name='breweryAddress1' placeholder='Brewery Address Line 1' value=brewery_address_1)
                    input.pure-input-1-3(type='text' id='breweryAddress2' name='breweryAddress2' placeholder='Brewery Address Line 2' value=brewery_address_2)
                    div.pure-input-1-3
                        div.pure-u-3-5
                            input.pure-input-1(type='text' name='breweryCity' id='breweryCity' placeholder='City' value=brewery_city)
                        div.pure-u-1-5
                            input.pure-input-1(type='text' name='breweryState' id='breweryState' placeholder='State' maxlength='2' value=brewery_state)
                        div.pure-u-1-5
                            input.pure-input-1(type='number' name='breweryZip' id='breweryZip' placeholder='Zip' value=brewery_zip)
                fieldset(class='pure-group')
                    legend Brewery Open Hours - If Left Blank it will display as CLOSED
                    label Enter hours as hh:mmpm-hh:mmpm (ex- 1:00pm-10:00pm)
                    input.pure-input-1-4(type='text' name='breweryMonday' placeholder='Monday Hours' value=brewery_monday)
                    input.pure-input-1-4(type='text' name='breweryTuesday' placeholder='Tuesday Hours' value=brewery_tuesday)
                    input.pure-input-1-4(type='text' name='breweryWednesday' placeholder='Wednesday Hours' value=brewery_wednesday)
                    input.pure-input-1-4(type='text' name='breweryThursday' placeholder='Thursday Hours' value=brewery_thursday)
                    input.pure-input-1-4(type='text' name='breweryFriday' placeholder='Friday Hours' value=brewery_friday)
                    input.pure-input-1-4(type='text' name='brewerySaturday' placeholder='Saturday Hours' value=brewery_saturday)
                    input.pure-input-1-4(type='text' name='brewerySunday' placeholder='Sunday Hours' value=brewery_sunday)
                button(type='submit' class='pure-button pure-button-primary' value='userInfo') Update
