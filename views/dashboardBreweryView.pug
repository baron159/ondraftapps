head
    script(src="./../js/bundle.js")
body.account_backing
    div(id="layout" class="layout_override")
        // Menu toggle
        a#menuLink.menu-link(href='#menu')
            span
        #menu.pure-menu(class="menu_width_override")
            a(href='/dashboard/main')
                img.menu_img_style(src="./../static/ondraftLogo.png")
            hr(size="1" width="70%")
            ul.pure-menu-list
                li.pure-menu-item(class="menu-height-override")
                    a.pure-menu-link(href='/dashboard/account-info') My Account
                li.pure-menu-item(class="menu-height-override")
                    a.pure-menu-link(href='/dashboard/brew-page') Brews
                li.pure-menu-item(class="menu-height-override")
                    a.pure-menu-link(href='#') Payment Info
                li.pure-menu-item(class="menu-height-override")
                    a.pure-menu-link(href='/log-out') Sign Out
        #main
            span.dashboard_title() My Brewery
            h4 #{message}
            form.pure-g(action='/dashboard/brewery-update' method='POST' class='pure-form')
                div.pure-u-11-24
                    input(type='hidden', name='_csrf', value=_csrf)
                    input(type='hidden', name='freshUpdate', value=freshFlag)
                    input(type='hidden', name='breweryId', value=brewery_id)
                    fieldset(class='pure-group')
                        legend.sub-heading Brewery Profile
                        input.pure-input-2-3(type='text' name='breweryName' id='breweryName' placeholder='Brewery Name' value=brewery_name)
                        textarea.pure-input-2-3(id='brewerySum' name='brewerySum' placeholder='Brewery Summary ex- Family owned since 1995') #{brewery_summary}
                        textarea.pure-input-2-3(id='breweryFeatures' name='breweryFeatures' placeholder='Brewery Amenities ex- Dog Friendly, Outside Sitting, Food') #{brewery_amenities}
                        input.pure-input-2-3(type='text' id='breweryAddress1' name='breweryAddress1' placeholder='Brewery Address Line 1' value=brewery_address_1)
                        input.pure-input-2-3(type='text' id='breweryAddress2' name='breweryAddress2' placeholder='Brewery Address Line 2' value=brewery_address_2)
                        div.pure-u-1
                            div.pure-u-1-2
                                input.pure-input-1(type='text' name='breweryCity' id='breweryCity' placeholder='City' value=brewery_city)
                            div.pure-u-1-6
                                input.pure-input-1(type='text' name='breweryState' id='breweryState' placeholder='State' maxlength='2' value=brewery_state)
                            div.pure-u-1-3
                                input.pure-input-1(type='number' name='breweryZip' id='breweryZip' placeholder='Zip' value=brewery_zip)
                div.pure-u-1-24
                div.pure-u-1-2
                    fieldset(class='pure-group')
                        legend.sub-heading Brewery Open Hours
                        label() If Left Blank it will display as CLOSED
                        br
                        label(style="padding-bottom:5px;") Enter hours as hh:mmpm-hh:mmpm (ex- 1:00pm-10:00pm)
                        input.pure-input-1-3(type='text' name='breweryMonday' placeholder='Monday Hours' value=brewery_monday)
                        input.pure-input-1-3(type='text' name='breweryTuesday' placeholder='Tuesday Hours' value=brewery_tuesday)
                        input.pure-input-1-3(type='text' name='breweryWednesday' placeholder='Wednesday Hours' value=brewery_wednesday)
                        input.pure-input-1-3(type='text' name='breweryThursday' placeholder='Thursday Hours' value=brewery_thursday)
                        input.pure-input-1-3(type='text' name='breweryFriday' placeholder='Friday Hours' value=brewery_friday)
                        input.pure-input-1-3(type='text' name='brewerySaturday' placeholder='Saturday Hours' value=brewery_saturday)
                        input.pure-input-1-3(type='text' name='brewerySunday' placeholder='Sunday Hours' value=brewery_sunday)
                button(type='submit' class='pure-button ondraft_button_primary' value='userInfo') Update
