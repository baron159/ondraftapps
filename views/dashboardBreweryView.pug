head
    script(src="./../js/bundle.js")
body
    div(id="layout")
        // Menu toggle
        a#menuLink.menu-link(href='#menu')
            // Hamburger icon
            span
        #menu
            .pure-menu
                a.pure-menu-heading(href='/dashboard/main') Dashboard
                ul.pure-menu-list
                    li.pure-menu-item(class="menu-height-override")
                        a.pure-menu-link(href='#') Account
                    li.pure-menu-item(class="menu-height-override")
                        a.pure-menu-link(href='#') Brews
                    li.pure-menu-item(class="menu-height-override")
                        a.pure-menu-link(href='#') Payment Info
                    li.pure-menu-item(class="menu-height-override")
                        a.pure-menu-link(href='#') Sign Out
        #main
            h2 My Brewery Information
            form(action='' method='POST' class='pure-form')
                fieldset(class='pure-group')
                        legend Brewery Profile
                        input.pure-input-1-3(type='text' name='breweryName' id='breweryName' placeholder='Brewery Name')
                        textarea.pure-input-1-3(id='brewerySum' name='brewerySum' placeholder='Brewery Summary ex- Family owned since 1995')
                        textarea.pure-input-1-3(id='breweryFeatures' name='breweryFeatures' placeholder='Brewery Amenities ex- Dog Friendly, Outside Sitting, Food')
                        input.pure-input-1-3(type='text' id='breweryAddress1' name='breweryAddress1' placeholder='Brewery Address Line 1')
                        input.pure-input-1-3(type='text' id='breweryAddress2' name='breweryAddress2' placeholder='Brewery Address Line 2')
                        div.pure-input-1-3
                            div.pure-u-3-5
                                input.pure-input-1(type='text' name='breweryCity' id='breweryCity' placeholder='City')
                            div.pure-u-1-5
                                input.pure-input-1(type='text' name='breweryState' id='breweryState' placeholder='State' maxlength='2')
                            div.pure-u-1-5
                                input.pure-input-1(type='number' name='breweryZip' id='breweryZip' placeholder='Zip')
                fieldset(class='pure-group')
                    legend Brewery Open Hours - If Left Blank it will display as CLOSED
                    label Enter hours as hh:mmpm-hh:mmpm (ex- 1:00pm-10:00pm)
                    input.pure-input-1-4(type='text' name='breweryMonday' placeholder='Monday Hours')
                    input.pure-input-1-4(type='text' name='breweryTuesday' placeholder='Tuesday Hours')
                    input.pure-input-1-4(type='text' name='breweryWednesday' placeholder='Wednesday Hours')
                    input.pure-input-1-4(type='text' name='breweryThursday' placeholder='Thursday Hours')
                    input.pure-input-1-4(type='text' name='breweryFriday' placeholder='Friday Hours')
                    input.pure-input-1-4(type='text' name='brewerySaturday' placeholder='Saturday Hours')
                    input.pure-input-1-4(type='text' name='brewerySunday' placeholder='Sunday Hours')
                button(type='submit' class='pure-button pure-button-primary' value='userInfo') Update

